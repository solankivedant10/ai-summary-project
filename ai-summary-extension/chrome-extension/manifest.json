{
  "manifest_version": 3,
  "name": "AI Summary Extension",
  "version": "1.0.0",
  "description": "Capture page content and send to AI summary API",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://13.49.66.157/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Summary Extension"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 